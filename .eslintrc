{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb/base",
    "plugin:import/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "linebreak-style": "off",
    "quotes": "off",
    "no-unused-expressions": [
      "error",
      {
        "allowTernary": true
      }
    ],
    "arrow-body-style": [
      "error",
      "always"
    ],
    "max-len": [
      "error",
      {
        "ignoreComments": true,
        "code": 150
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "import/no-named-as-default": "off",
    "import/extensions": "off",
    "func-names": "off"
  }
}
