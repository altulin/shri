{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-standard-scss",
    "stylelint-config-rational-order"
  ],
  "plugins": ["stylelint-order", "stylelint-scss", "stylelint-prettier"],
  "rules": {
    "prettier/prettier": true,
    "color-hex-length": "short",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "if",
          "each",
          "include",
          "mixin",
          "return",
          "else"
        ]
      }
    ]
  }
}
